# All the config I will probably never need.

# path crap
[[ -d $HOME/.bin ]] && export PATH=$HOME/.bin:$PATH

# set default editor
export EDITNOW='subl'
export EDITOR='subl -w'
export LESS="$LESS -i -F -R -X"

# git auto-complete
source /Library/Developer/CommandLineTools/usr/share/git-core/git-completion.bash
source /Library/Developer/CommandLineTools/usr/share/git-core/git-prompt.sh

# handy aliases
alias ls="/bin/ls -F"
alias ll='ls -l'
alias la='ls -hlA'
alias l='ls'
alias rm='rm -v'
alias df='df -h'
alias du='du -h'
alias grep="grep --color"
alias hosts='sudo $EDITNOW /etc/hosts'
alias subl="'/Applications/Sublime Text.app/Contents/SharedSupport/bin/subl'"

# Autojump
[[ -s $(brew --prefix)/etc/profile.d/autojump.sh ]] && . $(brew --prefix)/etc/profile.d/autojump.sh


# do close spelling matches with cd
shopt -s cdspell
shopt -s histappend
shopt -s nocaseglob
shopt -s checkwinsize


# improved history
export HISTIGNORE="[   ]*:&:bg:fg:exit"
export HISTCONTROL=ignoredups:erasedups                                         # no duplicate entries
export HISTSIZE=100000                                                          # big big history
export HISTFILESIZE=100000                                                      # big big history
shopt -s histappend                                                             # append to history, don't overwrite it
export PROMPT_COMMAND="history -a; history -c; history -r; $PROMPT_COMMAND"     # Save and reload the history after each command finishes


# color & prompt stuff
export CLICOLOR=1
export TERM=xterm-color

LS_COLORS=$LS_COLORS:'di=0;94:'; export LS_COLORS

parse_git_branch() {
    git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}

uber_prompt() {
    local        BLUE="\[\033[0;94m\]"
    local      YELLOW="\[\033[0;33m\]"
    local         RED="\[\033[0;31m\]"
    local   LIGHT_RED="\[\033[1;31m\]"
    local       GREEN="\[\033[0;32m\]"
    local LIGHT_GREEN="\[\033[1;32m\]"
    local       WHITE="\[\033[1;37m\]"
    local  LIGHT_GRAY="\[\033[0;37m\]"
    PS1="$LIGHT_GRAY$*$GREEN\$(parse_git_branch)$LIGHT_GRAY\$ "
    PS2='> '
    PS4='+ '
}

myself="`whoami`"
linux_prompt="[\u@\h \W]"
darwin_prompt="\u@\h:\W"
me_prompt="\h:\w"

if [ "$uname" == "Darwin" ]; then
    if [ "$myself" == 'sdubs' -o "$myself" == 'sarah' ]; then
        uber_prompt $me_prompt;
    else
        uber_prompt $darwin_prompt;
    fi
else
    uber_prompt $linux_prompt
fi
